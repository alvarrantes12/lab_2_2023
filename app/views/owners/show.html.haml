%p#notice= notice

.div.m-4
  .card 
    .card-body 
      %h5.card-title
        = t("activerecord.attributes.labels.first_name")
      %p.card-text= @owner.first_name

      %h5.card-title
        = t("activerecord.attributes.labels.last_name")
      %p.card-text= @owner.last_name

      %h5.card-title
        = t("activerecord.attributes.labels.email")
      %p.card-text= @owner.email

      %h5.card-title
        = t("activerecord.attributes.labels.identity")
      %p.card-text= @owner.identity

      %h5.card-title
        = t("activerecord.attributes.labels.level")
      %p.card-text= @owner.level


  .row.mt-4 
    .offset-3.col-3 
      = link_to t('application.back'), owners_path, class: "btn btn-secondary"
    .col-3
      = link_to t('application.edit'), edit_owner_path(@owner), class: "btn btn-success"
   
