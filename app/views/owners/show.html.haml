.dif.m-4
  .page.header
    %h1.mb-4
      = t('application.show') 
      = t('activerecord.modules.owner.one')
    %p
      %b= t('activerecord.attributes.owner.first_name') 
      \:
      = @owner.first_name
    %p
      %b= t('activerecord.attributes.owner.last_name')
      \:
      = @owner.last_name
    %p
      %b= t('activerecord.attributes.owner.email')
      \:
      = @owner.email
    %p
      %b= t('activerecord.attributes.owner.identifier')
      \:
      = @owner.identifier
    %p
      %b= t('activerecord.attributes.owner.level')
      \:
      = @owner.level
    = link_to t('application.back'), owners_path, class: "btn btn-secondary btn-block"
    = link_to t('application.edit'), edit_owner_path(@owner), class: "btn btn-success"
    



  

