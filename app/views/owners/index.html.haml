%p{:style => "color: green"}= notice
.div.m-4
  .page.header
    %h1.mb-4
      = t('application.owners_list')
    .float-end
      = link_to t('application.create'), new_owner_path, class: "btn btn-primary"

  %table.table.table-striped
    %thread
      %tr
        %th= t('activerecord.attributes.owner.name')
        %th= t('activerecord.attributes.owner.last_name')
        %th= t('activerecord.attributes.owner.email')
        %th= t('activerecord.attributes.owner.identifier')
        %th= t('activerecord.attributes.owner.level')
        %th
        %th
        %th
    %tbody
      - @owners.each do |owner|
        %tr
          %td= owner.name
          %td= owner.last_name
          %td= owner.email
          %td= owner.identifier
          %td= owner.level
          %td= link_to t('application.show'), owner, class: "btn btn-info"
          %th= link_to t('application.edit'), edit_owner_path(owner), class: "btn btn-success"
          %th= button_to t('application.delete'), owner, method: :delete, class: "btn btn-danger"
                                              
                                             
