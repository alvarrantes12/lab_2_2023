%p{:style => "color: green"}= notice
.div.m-4
  .page.header 
    %h1.mb-4
      = t('application.list_of', model: t('activerecord.modules.owner.otherone'))
    .float-end.pb-4
      = link_to t('application.create'), new_owner_path, class: "btn btn-primary"

  %table.table.table-striped
    %thread 
      %tr
        %th= t('activerecord.attributes.labels.first_name')
        %th= t('activerecord.attributes.labels.last_name')
        %th= t('activerecord.attributes.labels.email')
        %th= t('activerecord.attributes.labels.identity')
        %th= t('activerecord.attributes.labels.level')
        %th
        %th
        %th
    %tbody
      -@owners.each do |owner|
        %tr
          %td= owner.first_name
          %td= owner.last_name
          %td= owner.email
          %td= owner.identity
          %td= owner.level
          %td= link_to t('application.show'), owner, class: "btn btn-info"
          %td= link_to t('application.edit'), edit_owner_path(owner), class: "btn btn-success"
          %td= button_to t('application.delete'), owner, method: :delete, class: "btn btn-danger" 
